<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/custom_background_rv"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="2dp"
    android:padding="12dp"
    android:weightSum="100">


    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/roundedImageView.8"
        android:layout_width="0dp"
        android:id="@+id/product_image"
        android:layout_height="75dp"
        android:layout_weight="20"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/product_name_affiliation"
            android:textColor="@color/secondary_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:text="@string/price"
            android:textColor="@color/primary_dark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/product_provider"
            android:contentDescription="@string/product_affiliation"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tokopedia" />
    </LinearLayout>
</LinearLayout>
